{
  "name": "ts-algorithms",
  "version": "1.0.2",
  "description": "A list of data structures and algorithms in TypeScript",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "start": "tsnd --respawn --transpileOnly --no-notify ./src",
    "lint": "eslint 'src/**/*.ts'",
    "test": "jest",
    "test:w": "jest --watch"
  },
  "keywords": [
    "algorithms",
    "typescript",
    "data structures"
  ],
  "author": "Ryan Dsouza",
  "license": "ISC",
  "dependencies": {
    "typescript": "^3.9.3"
  },
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.8",
    "@types/prettier": "^2.0.1",
    "@types/rimraf": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/parser": "^3.4.0",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^6.11.0",
    "husky": ">=4",
    "jest": "^25.5.4",
    "lint-staged": ">=10.2.7",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.5.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "typesync": "^0.7.0"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,json,md}": [
      "npm run lint",
      "prettier --write"
    ]
  }
}
